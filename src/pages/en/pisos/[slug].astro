---
import Layout from '../../../layouts/Layout.astro';
import { t, getLocalePath } from '../../../i18n/translations';
import { flats } from '../../../data/flats';

const lang = 'en';

export function getStaticPaths() {
  return flats.map(flat => ({ params: { slug: flat.slug }, props: { flat } }));
}

const { flat } = Astro.props;
---

<Layout title={flat.name[lang]} lang={lang}>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href={getLocalePath(lang, '/pisos/')} class="hover:text-primary-600">{t(lang, 'nav.flats')}</a>
      <span class="mx-2">/</span>
      <span class="text-gray-800">{flat.name[lang]}</span>
    </nav>
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
      <div class="aspect-[21/9] bg-primary-100 flex items-center justify-center text-primary-300">
        <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-4 0a1 1 0 01-1-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 01-1 1" />
        </svg>
      </div>
      <div class="p-6 md:p-8">
        <h1 class="font-display text-3xl font-bold text-gray-900">{flat.name[lang]}</h1>
        <p class="text-gray-500 mt-1">{flat.neighborhood[lang]} &mdash; {flat.address}</p>
        <p class="text-gray-600 mt-4 leading-relaxed max-w-3xl">{flat.description[lang]}</p>
      </div>
    </div>
    <div class="mt-8">
      <h2 class="font-display text-xl font-semibold text-gray-900 mb-4">{t(lang, 'flat.amenities')}</h2>
      <div class="flex flex-wrap gap-2">
        {flat.amenities.map(a => <span class="bg-primary-50 text-primary-700 text-sm font-medium px-3 py-1 rounded-full">{a}</span>)}
      </div>
    </div>
    <div class="mt-10">
      <h2 class="font-display text-xl font-semibold text-gray-900 mb-6">{t(lang, 'flat.rooms')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {flat.rooms.map(room => (
          <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-semibold text-gray-900">{room.name[lang]}</h3>
              <span class:list={['text-xs font-semibold px-2 py-1 rounded-full', room.available ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-500']}>
                {room.available ? t(lang, 'flats.available') : t(lang, 'flats.occupied')}
              </span>
            </div>
            <p class="text-2xl font-bold text-primary-700">{room.price}&euro;<span class="text-sm font-normal text-gray-500">{t(lang, 'flats.month')}</span></p>
            <p class="text-sm text-gray-500 mt-1">{room.size}</p>
            <ul class="mt-3 space-y-1">
              {room.features.map(f => <li class="text-sm text-gray-600 flex items-center gap-2"><span class="w-1.5 h-1.5 bg-primary-400 rounded-full"></span>{f}</li>)}
            </ul>
            {room.available && (
              <a href={getLocalePath(lang, '/contacto/')} class="mt-4 block text-center bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 rounded-lg transition-colors text-sm">{t(lang, 'flat.contact')}</a>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
