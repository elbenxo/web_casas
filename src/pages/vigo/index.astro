---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/translations';
import { vigoSections } from '../../data/vigo';

const lang = 'es';
---

<Layout title={t(lang, 'vigo.title')} lang={lang}>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <h1 class="font-display text-4xl font-bold text-gray-900">{t(lang, 'vigo.title')}</h1>
    <p class="mt-2 text-gray-600 text-lg">{t(lang, 'vigo.subtitle')}</p>

    <div class="mt-12 space-y-16">
      {vigoSections.map(section => (
        <div>
          <h2 class="font-display text-2xl font-bold text-gray-900 mb-2">{section.title[lang]}</h2>
          <p class="text-gray-600 mb-6">{section.content[lang]}</p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {section.items.map(item => (
              <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
                <h3 class="font-semibold text-gray-900 mb-2">{item.name}</h3>
                <p class="text-sm text-gray-600">{item.description[lang]}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16">
      <h2 class="font-display text-2xl font-bold text-gray-900 mb-4">{t(lang, 'flat.location')}</h2>
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <iframe
          src="https://www.openstreetmap.org/export/embed.html?bbox=-8.8%2C42.19%2C-8.65%2C42.28&layer=mapnik&marker=42.2314%2C-8.7124"
          width="100%"
          height="400"
          style="border:0"
          loading="lazy"
          title="Mapa de Vigo"
        ></iframe>
      </div>
    </div>
  </section>
</Layout>
