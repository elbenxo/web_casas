---
import { t, getLocalePath, type Lang } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="bg-primary-900 text-white mt-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="font-display text-xl font-bold mb-2">Casas Vigo</h3>
        <p class="text-primary-200 text-sm">{t(lang, 'footer.tagline')}</p>
      </div>
      <div>
        <h4 class="font-semibold mb-3 text-primary-100">Links</h4>
        <ul class="space-y-2 text-sm text-primary-200">
          <li><a href={getLocalePath(lang, '/')} class="hover:text-white transition-colors">{t(lang, 'nav.home')}</a></li>
          <li><a href={getLocalePath(lang, '/pisos/')} class="hover:text-white transition-colors">{t(lang, 'nav.flats')}</a></li>
          <li><a href={getLocalePath(lang, '/vigo/')} class="hover:text-white transition-colors">{t(lang, 'nav.vigo')}</a></li>
          <li><a href={getLocalePath(lang, '/contacto/')} class="hover:text-white transition-colors">{t(lang, 'nav.contact')}</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-semibold mb-3 text-primary-100">{t(lang, 'nav.contact')}</h4>
        <ul class="space-y-2 text-sm text-primary-200">
          <li>info@casasvigo.com</li>
          <li>+34 600 000 000</li>
          <li>Vigo, Galicia, Espa√±a</li>
        </ul>
      </div>
    </div>
    <div class="border-t border-primary-800 mt-8 pt-6 text-center text-sm text-primary-300">
      &copy; {year} Casas Vigo. {t(lang, 'footer.rights')}.
    </div>
  </div>
</footer>
